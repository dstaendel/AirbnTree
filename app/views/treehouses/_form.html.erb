<%= simple_form_for(@treehouse, html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group">
    <%= f.input :tree_type, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group">
    <%= f.input :summary, as: :text, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group">
    <%= f.input :address, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group">
    <%= f.input :total_occupancy, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group">
    <%= f.input :price, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group">
    <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'form-control-file' }, wrapper: false, label_html: { class: 'form-label' } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
