<div class="cards px-5">

  <% @treehouses.each do |treehouse| %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path treehouse.photos[0].key, height: 300, crop: :fill %>')">
      <%= link_to treehouse.name, treehouse_path(treehouse) %>
    </div>
  <% end %>

</div>


<% @treehouses.each do |treehouse| %>
  <li>
    <%= link_to treehouse.name, treehouse_path(treehouse) %>
    <div class="treehouse-photos">
      <% treehouse.photos.each do |photo| %>
        <%= cl_image_tag photo.key, class: "treehouse-photo" %>
      <% end %>
    </div>
  </li>
<% end %>

<%= link_to "Add treehouse", new_treehouse_path %>
