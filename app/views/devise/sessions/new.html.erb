<h2 class="text-center mb-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: '' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control' },
                wrapper: false,
                label_html: { class: 'form-label' } %>

    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'form-control' },
                wrapper: false,
                label_html: { class: 'form-label' } %>

    <% if devise_mapping.rememberable? %>
      <%= f.input :remember_me, as: :boolean, inline_label: 'Remember me', input_html: { class: 'form-check-input' }, wrapper: false, label_html: { class: 'form-check-label' } %>
    <% end %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Log in", class: 'btn btn-primary mt-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
